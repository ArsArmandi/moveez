<% include ../partials/header %>

<div class="ui main text container">
    <div class="ui top attached">
        <h1 class="ui header">Your moveez watchlist</h1>
        
        <form class="ui form" action="/title" method="POST">
            <div class="fields">
                <div class="six wide field">
                    <input type="text" placeholder="type a name to add" name="title[name]" required>
                </div>
                <button class="ui icon teal button" data-tooltip="Add a new title" data-inverted=""><i class="add circle icon"></i></button>
            </div>
        </form>

        <div class="ui list">
        <% titles.forEach(function(title){ %>          
            <div class="item">
                <i class="film"></i>
                <div class="content">
                    <%= title.name %>
                    <button onclick="prepareModal('<%= title.name %>', '<%= title._id %>');" class="ui icon gray mini button" data-tooltip="Edit '<%= title.name %>'" data-inverted=""><i class="pencil icon"></i></button>
                    <form class="delete" method="POST" action="/title/<%= title._id %>?_method=DELETE">
                            <button class="ui icon black mini button" data-tooltip="Delete '<%= title.name %>'" data-inverted=""><i class="icon trash"></i></button>
                    </form>
                </div>
            </div>
        <% }); %>           
        </div>

        <div class="ui modal">
            <i class="close icon"></i>
            <div class="header">
                <b>Update Name</b> for "<span id="modalOldName"></span>"
            </div>
            <div class="image content">
                <form id="modalForm" class="ui form" method="POST" action="">
                    <div class="description">
                        <input id="modalInput" type="text" name="title[name]" required>
                    </div>
            </div>
            <div class="actions">
                <div class="ui black deny right labeled icon button">
                    Abort
                    <i class="close icon"></i>
                </div>
                <input type="submit" value="Update" form="modalForm" class="ui button teal">
            </div>
                </form>
        </div>

    </div>
</div>

<% include ../partials/footer %>