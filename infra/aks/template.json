{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceName": {
            "type": "string",
            "metadata": {
                "description": "Der Name der verwalteten Clusterressource."
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Der Standort der AKS-Ressource."
            }
        },
        "dnsPrefix": {
            "type": "string",
            "metadata": {
                "description": "Optionales DNS-Präfix zur Verwendung mit dem FQDN eines gehosteten Kubernetes-API-Servers."
            }
        },
        "osDiskSizeGB": {
            "type": "int",
            "defaultValue": 0,
            "metadata": {
                "description": "Die Datenträgergröße (in GB), die für jeden einzelnen Agent-Poolknoten bereitgestellt werden. Dieser Wert liegt zwischen 0 und 1023. Bei Festlegung von 0 wird die standardmäßige Datenträgergröße für \"agentVMSize\" angewendet."
            },
            "minValue": 0,
            "maxValue": 1023
        },
        "agentCount": {
            "type": "int",
            "defaultValue": 3,
            "metadata": {
                "description": "Die Anzahl von Agent-Knoten für den Cluster."
            },
            "minValue": 1,
            "maxValue": 50
        },
        "agentVMSize": {
            "type": "string",
            "defaultValue": "Standard_D2_v2",
            "metadata": {
                "description": "Die Größe der VM."
            }
        },
        "servicePrincipalClientId": {
            "metadata": {
                "description": "Die (vom Cloudanbieter verwendete) Client-ID."
            },
            "type": "securestring"
        },
        "servicePrincipalClientSecret": {
            "metadata": {
                "description": "Das Clientgeheimnis für den Dienstprinzipal."
            },
            "type": "securestring"
        },
        "osType": {
            "type": "string",
            "defaultValue": "Linux",
            "allowedValues": [
                "Linux"
            ],
            "metadata": {
                "description": "Der Typ des Betriebssystems."
            }
        },
        "kubernetesVersion": {
            "type": "string",
            "defaultValue": "1.7.7",
            "metadata": {
                "description": "Die Version von Kubernetes."
            }
        },
        "networkPlugin": {
            "type": "string",
            "allowedValues": [
                "azure",
                "kubenet"
            ],
            "metadata": {
                "description": "Das zum Erstellen des Kubernetes-Netzwerks verwendete Netzwerk-Plug-In."
            }
        },
        "maxPods": {
            "type": "int",
            "defaultValue": 30,
            "metadata": {
                "description": "Die maximale Anzahl von Pods, die auf einem Knoten ausgeführt werden können."
            }
        },
        "enableRBAC": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "Ein boolesches Flag zum Aktivieren und Deaktivieren von RBAC."
            }
        },
        "enableHttpApplicationRouting": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "Ein boolesches Flag zum Aktivieren und Deaktivieren des HTTP-Anwendungsroutings."
            }
        },
        "enableOmsAgent": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "Ein boolesches Flag zum Aktivieren und Deaktivieren des omsagent-Add-Ons."
            }
        },
        "workspaceRegion": {
            "type": "string",
            "defaultValue": "East US",
            "metadata": {
                "description": "Geben Sie die Region für den OMS-Arbeitsbereich an."
            }
        },
        "workspaceName": {
            "type": "string",
            "metadata": {
                "description": "Geben Sie den Namen des OMS-Arbeitsbereichs an."
            }
        },
        "omsWorkspaceId": {
            "type": "string",
            "metadata": {
                "description": "Geben Sie die Ressourcen-ID des OMS-Arbeitsbereichs an."
            }
        },
        "omsSku": {
            "type": "string",
            "defaultValue": "standalone",
            "allowedValues": [
                "free",
                "standalone",
                "pernode"
            ],
            "metadata": {
                "description": "Wählen Sie die SKU für Ihren Arbeitsbereich aus."
            }
        },
        "vnetSubnetID": {
            "type": "string",
            "metadata": {
                "description": "Die Ressourcen-ID des Subnetzes für das virtuelle Netzwerk für die IP-Zuweisung für Knoten und/oder Pods."
            }
        },
        "serviceCidr": {
            "type": "string",
            "metadata": {
                "description": "Ein IP-Bereich in CIDR-Notation, über den IP-Adressen für den Dienstcluster zugewiesen werden."
            }
        },
        "dnsServiceIP": {
            "type": "string",
            "metadata": {
                "description": "IP-Adresse des DNS-Servercontainers."
            }
        },
        "dockerBridgeCidr": {
            "type": "string",
            "metadata": {
                "description": "Eine IP-Adresse für die Docker-Brücke in CIDR-Notation."
            }
        },
        "principalId": {
            "type": "string",
            "metadata": {
                "description": "Die objectId des Dienstprinzipals."
            }
        },
        "aciVnetSubnetName": {
            "type": "string",
            "metadata": {
                "description": "Der Name des Subnetzes für das virtuelle Netzwerk für den ACI-Connector."
            }
        },
        "aciConnectorLinuxEnabled": {
            "type": "bool",
            "metadata": {
                "description": "Aktiviert den Linux-ACI-Connector."
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2018-03-31",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', 'WorkspaceDeployment-20190310111315')]",
                "Microsoft.Network/virtualNetworks/moveez_aks_rg-vnet",
                "[concat('Microsoft.Resources/deployments/', 'ClusterSubnetRoleAssignmentDeployment-20190310111315')]",
                "[concat('Microsoft.Resources/deployments/', 'AciSubnetRoleAssignmentDeployment-20190310111315')]"
            ],
            "type": "Microsoft.ContainerService/managedClusters",
            "location": "[parameters('location')]",
            "name": "[parameters('resourceName')]",
            "properties": {
                "kubernetesVersion": "[parameters('kubernetesVersion')]",
                "enableRBAC": "[parameters('enableRBAC')]",
                "dnsPrefix": "[parameters('dnsPrefix')]",
                "agentPoolProfiles": [
                    {
                        "name": "agentpool",
                        "osDiskSizeGB": "[parameters('osDiskSizeGB')]",
                        "count": "[parameters('agentCount')]",
                        "vmSize": "[parameters('agentVMSize')]",
                        "osType": "[parameters('osType')]",
                        "storageProfile": "ManagedDisks",
                        "vnetSubnetID": "[parameters('vnetSubnetID')]"
                    }
                ],
                "servicePrincipalProfile": {
                    "ClientId": "[parameters('servicePrincipalClientId')]",
                    "Secret": "[parameters('servicePrincipalClientSecret')]"
                },
                "networkProfile": {
                    "networkPlugin": "[parameters('networkPlugin')]",
                    "serviceCidr": "[parameters('serviceCidr')]",
                    "dnsServiceIP": "[parameters('dnsServiceIP')]",
                    "dockerBridgeCidr": "[parameters('dockerBridgeCidr')]"
                },
                "addonProfiles": {
                    "httpApplicationRouting": {
                        "enabled": "[parameters('enableHttpApplicationRouting')]"
                    },
                    "omsagent": {
                        "enabled": "[parameters('enableOmsAgent')]",
                        "config": {
                            "logAnalyticsWorkspaceResourceID": "[parameters('omsWorkspaceId')]"
                        }
                    },
                    "aciConnectorLinux": {
                        "enabled": "[parameters('aciConnectorLinuxEnabled')]",
                        "config": {
                            "SubnetName": "[parameters('aciVnetSubnetName')]"
                        }
                    }
                }
            },
            "tags": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "SolutionDeployment-20190310111315",
            "apiVersion": "2017-05-10",
            "resourceGroup": "[split(parameters('omsWorkspaceId'),'/')[4]]",
            "subscriptionId": "[split(parameters('omsWorkspaceId'),'/')[2]]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "apiVersion": "2015-11-01-preview",
                            "type": "Microsoft.OperationsManagement/solutions",
                            "location": "[parameters('workspaceRegion')]",
                            "name": "[concat('ContainerInsights', '(', split(parameters('omsWorkspaceId'),'/')[8], ')')]",
                            "properties": {
                                "workspaceResourceId": "[parameters('omsWorkspaceId')]"
                            },
                            "plan": {
                                "name": "[concat('ContainerInsights', '(', split(parameters('omsWorkspaceId'),'/')[8], ')')]",
                                "product": "[concat('OMSGallery/', 'ContainerInsights')]",
                                "promotionCode": "",
                                "publisher": "Microsoft"
                            }
                        }
                    ]
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', 'WorkspaceDeployment-20190310111315')]"
            ]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "WorkspaceDeployment-20190310111315",
            "apiVersion": "2017-05-10",
            "resourceGroup": "[split(parameters('omsWorkspaceId'),'/')[4]]",
            "subscriptionId": "[split(parameters('omsWorkspaceId'),'/')[2]]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "apiVersion": "2015-11-01-preview",
                            "type": "Microsoft.OperationalInsights/workspaces",
                            "location": "[parameters('workspaceRegion')]",
                            "name": "[parameters('workspaceName')]",
                            "properties": {
                                "sku": {
                                    "name": "[parameters('omsSku')]"
                                }
                            }
                        }
                    ]
                }
            }
        },
        {
            "apiVersion": "2018-08-01",
            "name": "moveez_aks_rg-vnet",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "eastus",
            "properties": {
                "subnets": [
                    {
                        "name": "default",
                        "id": "/subscriptions/0848c798-131c-4d65-ac2c-05b606da73e5/resourceGroups/moveez_aks_rg/providers/Microsoft.Network/virtualNetworks/moveez_aks_rg-vnet/subnets/default",
                        "properties": {
                            "addressPrefix": "10.240.0.0/16"
                        }
                    },
                    {
                        "name": "virtual-node-aci",
                        "id": "/subscriptions/0848c798-131c-4d65-ac2c-05b606da73e5/resourceGroups/moveez_aks_rg/providers/Microsoft.Network/virtualNetworks/moveez_aks_rg-vnet/subnets/virtual-node-aci",
                        "properties": {
                            "addressPrefix": "10.241.0.0/16",
                            "delegations": [
                                {
                                    "name": "aciDelegation",
                                    "properties": {
                                        "serviceName": "Microsoft.ContainerInstance/containerGroups",
                                        "actions": [
                                            "Microsoft.Network/virtualNetworks/subnets/action"
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                ],
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/8"
                    ]
                }
            },
            "tags": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "ClusterSubnetRoleAssignmentDeployment-20190310111315",
            "apiVersion": "2017-05-10",
            "resourceGroup": "moveez_aks_rg",
            "subscriptionId": "0848c798-131c-4d65-ac2c-05b606da73e5",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.Network/virtualNetworks/subnets/providers/roleAssignments",
                            "apiVersion": "2017-05-01",
                            "name": "moveez_aks_rg-vnet/default/Microsoft.Authorization/bfc37ad4-fad6-4698-b374-054402cd71bf",
                            "properties": {
                                "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', '4d97b98b-1d4f-4787-a291-c67834d212e7')]",
                                "principalId": "[parameters('principalId')]",
                                "scope": "/subscriptions/0848c798-131c-4d65-ac2c-05b606da73e5/resourceGroups/moveez_aks_rg/providers/Microsoft.Network/virtualNetworks/moveez_aks_rg-vnet/subnets/default"
                            }
                        }
                    ]
                }
            },
            "dependsOn": [
                "Microsoft.Network/virtualNetworks/moveez_aks_rg-vnet"
            ]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "AciSubnetRoleAssignmentDeployment-20190310111315",
            "apiVersion": "2017-05-10",
            "resourceGroup": "moveez_aks_rg",
            "subscriptionId": "0848c798-131c-4d65-ac2c-05b606da73e5",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.Network/virtualNetworks/subnets/providers/roleAssignments",
                            "apiVersion": "2017-05-01",
                            "name": "moveez_aks_rg-vnet/virtual-node-aci/Microsoft.Authorization/fb2a9381-ff94-41bd-9f18-da27ffae4b7c",
                            "properties": {
                                "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', '4d97b98b-1d4f-4787-a291-c67834d212e7')]",
                                "principalId": "[parameters('principalId')]",
                                "scope": "/subscriptions/0848c798-131c-4d65-ac2c-05b606da73e5/resourceGroups/moveez_aks_rg/providers/Microsoft.Network/virtualNetworks/moveez_aks_rg-vnet/subnets/virtual-node-aci"
                            }
                        }
                    ]
                }
            },
            "dependsOn": [
                "Microsoft.Network/virtualNetworks/moveez_aks_rg-vnet"
            ]
        }
    ],
    "outputs": {
        "controlPlaneFQDN": {
            "type": "string",
            "value": "[reference(concat('Microsoft.ContainerService/managedClusters/', parameters('resourceName'))).fqdn]"
        }
    }
}